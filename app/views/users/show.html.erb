<div class="container">
<h1 class='list-title' id="header-centered"><%= markdown_to_html "#{@user.name || @user.email}'s Profile"%></h1>
  <br>
   <div class="container">
   <h4 id="list-centered"> To-Do list </h4>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Description </th>
          <th>Days Left </th>
          <th>Complete </th>
        </tr>
      </thead>  
      <tbody class="js-items">       
          <%= render partial: 'items/item', collection: @items %> 
      <tbody> 
   </table>
  </div> 
   <br>
   <div class='new-item'>
       <% if policy(Item.new).create? %>
       <%= render partial: 'items/form', locals: { user: @user, item: @item } %>
       <% end %>
   </div>
</div>
