<%= form_for [user,item] do |f| %>
      <% if item.errors.any? %>
      <div class="alert alert-danger">
       <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
       <ul>
         <% item.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <div class="col-xs-8">
   <%= form_group_tag(item.errors[:name]) do %>
     <%= f.label "Description" %>
     <%= f.text_field :name, class: 'form-control', placeholder: "Enter item title" %>
   <% end %>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 </div>
 <% end %>